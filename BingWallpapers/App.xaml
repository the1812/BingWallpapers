<Application
  x:Class="BingWallpapers.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:wpf="clr-namespace:Ace.Wpf;assembly=Ace"
  StartupUri="View/MainView.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
          Source="Styles/TextBox.xaml" />
        <ResourceDictionary
          Source="Styles/Button.xaml" />
        <ResourceDictionary
          Source="Styles/TextBlock.xaml" />
        <ResourceDictionary
          Source="Styles/ProgressBar.xaml" />
        <ResourceDictionary
          Source="Styles/CheckBox.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <SolidColorBrush
        x:Key="DwmSelectionBrush"
        Color="{x:Static wpf:DwmEffect.ColorizationColor}" 
        Opacity="0.5"/>
      <SolidColorBrush
        x:Key="DwmBrush"
        Color="{x:Static wpf:DwmEffect.ColorizationColor}" />
      <SolidColorBrush
        x:Key="TitleBarColor"
        Color="{x:Static wpf:DwmEffect.WindowTitleColor}" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
